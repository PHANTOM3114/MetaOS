<!DOCTYPE node PUBLIC "-//freedesktop//DTD D-BUS Object Introspection 1.0//EN"
        "http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">
<node>

    <interface name="org.ars.sonar.Interface">

        <method name="PipelineStatusFetch">
            <arg direction="out" type="s" name="pipelineStatus"/>
        </method>

        <method name="UpdateToken">
            <arg direction="in" type="s" name="providerName"/>
            <arg direction="in" type="s" name="token"/>
            
            <arg direction="out" type="b" name="success"/>
        </method>

        <signal name="SonarWorkStop">
            <arg direction="out" type="s" name="exitMessage"/>
        </signal>

        <signal name="SonarCrash">
            <arg direction="out" type="s" name="crashMessage"/>
        </signal>
        
    </interface>
</node>