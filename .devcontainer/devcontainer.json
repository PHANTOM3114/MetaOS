{
    "name": "MetaOS Dev Environment",
    "build": {
        "dockerfile": "../Dockerfile"
    },

    "postCreateCommand": "sudo /etc/init.d/dbus start && sudo chmod 777 /run/dbus/system_bus_socket",

    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    
    "runArgs": ["--init", "--privileged"],

    "workspaceMount": "source=${localWorkspaceFolder},target=/home/metauser/MetaOS,type=bind,consistency=cached",
    "workspaceFolder": "/home/metauser/MetaOS",

    "remoteUser": "metauser"
}